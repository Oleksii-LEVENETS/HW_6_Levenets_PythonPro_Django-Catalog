[flake8]
max-line-length = 119
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # There's no value in checking .venv directory
    .venv,
    # There's no value in checking migrations directory
    *migrations*,
    # There's no value in checking tests.py file
    tests.py,
    # There's no value in checking tests directory
    tests
    # No need to traverse my sandbox, forms_django_crispy.py, render_field.html :)
    sandbox.py
    forms_django_crispy.py
    render_field.html
max-complexity = 10
